<h1>Tweets</h1>

<table class="table borderless">
  <thead class="thead-custom">
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th class="headings">Stars</th>
      <th class="headings">Retweets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td class="content"><%= tweet.content %></td>
        <td><%= image_tag tweet.user.image, class: 'user-image'%></td>
        <td class="body-link"><%= link_to time_ago_in_words(tweet.created_at), tweet_path(tweet.id)%> ago <small class="text-dark"> by <%= tweet.user.username %></small></td>
        <td><%= tweet.likes.count %></td>
        <td><%= tweet.rt_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="button-custom"><%= link_to 'New Tweet', new_tweet_path %></button>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= paginate @tweets %>
    <%= link_to_next_page @tweets, 'Mostrar mÃ¡s tweets' %>
  </div>
</div>