<h1>Tweets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th>Likes</th>
      <th>Retweets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.user.username %></td>
        <td><%= image_tag tweet.user.image, class: 'user-image'%></td>
        <td><%= tweet.likes.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>